<h3>Editar postagem: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/posts/edit" method="POST">
            <input type="hidden" name="id" value="{{post._id}}">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control" value="{{post.titulo}}">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{post.descricao}}">
            <label for="url">Url personalizada para o post:</label>
            <input type="text" name="url" class="form-control" value="{{post.url}}">
            <label for="conteudo"></label>
            <textarea name="conteudo">{{post.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria">
                {{#each categoria}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria foi adicionada</option>
                {{/each}}
            </select><br>
            <button type="submit" class="btn btn-success">Confirmar</button>
        </form>
    </div>
</div>